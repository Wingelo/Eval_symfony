{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ post.date }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ post.categorys }}</td>
            </tr>
            <tr>
                <th>Featured</th>
                <td>{{ post.Featured ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('post_index') }}">back to list</a>

    <a href="{{ path('post_edit', {'slug': post.slug}) }}">edit</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
